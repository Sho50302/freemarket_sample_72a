  = form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm", class: "cards__new") do
    .cards__form
      .cards__container
        .container__head
          %p クレジットカード情報入力
        .card__form
          .card__input
            .input__number
              .number__titles
                .number__title
                  %label カード番号
                .number__require
                  %label 必須
              = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
              %ul.card__images
                %li
                  = image_tag src=("https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2482339763"), class: "card__image"
                %li
                  = image_tag src=("https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2482339763"), class: "card__image"
                %li
                  = image_tag src=("https://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2482339763"), class: "card__image"
                %li
                  = image_tag src=("https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2482339763"), class: "card__image"
                %li
                  = image_tag src=("https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2482339763"), class:"card__image"
                %li
                  = image_tag src=("https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2482339763"), class: "card__image"
                %li
                  = image_tag src=("https://www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2482339763"), class: "card__image"
            .input__limit
              .limit__titles
                .limit__title
                  %label 有効期限
                .limit__require
                  %label 必須
              .card__limit
                %select#exp_month{name: "exp_month", type: "text"}
                  %option{value: ""} --
                  %option{value: "01"} 01
                  %option{value: "02"} 02
                  %option{value: "03"} 03
                  %option{value: "04"} 04
                  %option{value: "05"} 05
                  %option{value: "06"} 06
                  %option{value: "07"} 07
                  %option{value: "08"} 08
                  %option{value: "09"} 09
                  %option{value: "10"} 10
                  %option{value: "11"} 11
                  %option{value: "12"} 12
                %span 月/
                %select#exp_year{name: "exp_year", type: "text"}
                  %option{value: ""} --
                  %option{value: "2020"} 20
                  %option{value: "2021"} 21
                  %option{value: "2022"} 22
                  %option{value: "2023"} 23
                  %option{value: "2024"} 24
                  %option{value: "2025"} 25
                  %option{value: "2026"} 26
                  %option{value: "2027"} 27
                  %option{value: "2028"} 28
                  %option{value: "2029"} 29
                  %option{value: "2030"} 30
                %span 年
            .input__code
              .code__titles
                .code__title
                  %label セキュリティーコード
                .code__require
                  %label 必須
              = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面4桁もしくは3桁の番号", maxlength: "4", id: "cvc"

            .question
              %span ?
              %label カード背面の番号とは?
            .regestration__btn
              #card_token
              = submit_tag "追加する", id: "token_submit"
