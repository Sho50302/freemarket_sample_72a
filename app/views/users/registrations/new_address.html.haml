.addresses__new
  .addresses__title
    = link_to root_path do
      = image_tag src=("logo.png"), class: "addresses__image"
    %ul.new__lists
      %li.new__list
        会員情報
        .list__circle--red
      %li.new__list
        お届け先住所入力
        .list__circle--red
      %li.new__list
        完了
        .list__circle
  .new__border
  .addresses__form
    .addresses__container
      .container__title
        %p 発注元・お届け先住所入力
      .container__form
        = form_with model: @deliver_address, url: addresses_path, method: :post, local: true do |f|
          .addresses__field
            .user__name__field
              .field
                .field__title
                  お名前(全角)
                .field__require
                  必須
              = f.text_field :first_name, placeholder: "例)振間"
              = f.text_field :last_name, placeholder: "例)太郎"
            %ul.error
              %li#address_first_name_error
              %li#address_last_name_error
            .user__name__field
              .field
                .field__title
                  お名前カナ(全角)
                .field__require
                  必須
              = f.text_field :first_name_reading, placeholder: "例)フリマ"
              = f.text_field :last_name_reading, placeholder: "例)タロウ"
            %ul.error
              %li#address_first_name_reading_error
              %li#address_last_name_reading_error
            .address__field
              .field
                .field__title
                  郵便番号
                .field__require
                  必須
              = f.text_field :post_code, placeholder: "例)123-4567"
            %ul.error
              %li#post_code_error
            .address__field
              .field
                .field__title
                  都道府県
                .field__require
                  必須
              = f.collection_select :prefecture_id, Prefecture.all, :id, :name,  prompt:'---', class: "prefecture"
            %ul.error
              %li#prefecture_id_error
            .address__field
              .field
                .field__title
                  市区町村
                .field__require
                  必須
              = f.text_field :address_city, placeholder: "例)名古屋市中区"
            %ul.error
              %li#address_city_error
            .address__field
              .field
                .field__title
                  番地
                .field__require
                  必須
              = f.text_field :address_street, placeholder: "例)栄3-13-17"
            %ul.error
              %li#address_street_error
            .address__field
              .field
                .field__title
                  建物名
                .field__require--any
                  任意
              = f.text_field :address_building, placeholder: "例)栄センタービル"
            .address__field
              .field
                .field__title
                  お届け先の電話番号
                .field__require--any
                  任意
              = f.text_field :phone_number, placeholder: "例)080-1234-5678"
            %ul.error
              %li#address_phone_number_error
            .address__btn
              = f.submit "次へ進む", class: "btn"
  .new__footer
    %ul.footer__lists
      %li
        プライバシーポリシー
      %li
        フリマ利用規約
      %li
        特定商取引に関する表記
    .footer__icon
      = link_to root_path do
        = image_tag src=("logo-white.png"), class: "icon__image"
    .footer__text
      %p ©︎ 2020 Furima