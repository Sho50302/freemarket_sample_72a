.addresses__new
  .addresses__title
    = link_to root_path do
      = image_tag src=("logo.png"), class: "addresses__image"
    %ul.new__lists
      %li.new__list
        会員情報
        .list__circle--red
      %li.new__list
        お届け先住所入力
        .list__circle--red
      %li.new__list
        完了
        .list__circle
  .new__border
  .addresses__form
    .addresses__container
      .container__title
        %p 発注元・お届け先住所入力
      = form_with url: root_path, class: :container__form do |f|
        .addresses__field
          .user__name__field
            .field
              .field__title
                お名前
              .field__require
                必須
            %input{name: "first_name", placeholder: "例)振間", type: "text", value: ""}
            %input{name: "last_name", placeholder: "例)太郎", type: "text", value: ""}
          .user__name__field
            .field
              .field__title
                お名前(カナ)
              .field__require
                必須
            %input{name: "first_name_reading", placeholder: "例)フリマ", type: "text", value: ""}
            %input{name: "last_name__reading", placeholder: "例)タロウ", type: "text", value: ""}
          .address__field
            .field
              .field__title
                郵便番号
              .field__require
                必須
            %input{name: "post_code", placeholder: "例)123-4567", type: "text", value: ""}
          .address__field
            .field
              .field__title
                都道府県
              .field__require
                必須
            = f.collection_select :prefecture, Prefecture.all, :id, :name, prompt:'---', class: "prefecture"
          .address__field
            .field
              .field__title
                市区町村
              .field__require
                必須
            %input{name: "address_city", placeholder: "例)名古屋市中区", type: "text", value: ""}
          .address__field
            .field
              .field__title
                番地
              .field__require
                必須
            %input{name: "address_street", placeholder: "例)栄3-13-17", type: "text", value: ""}
          .address__field
            .field
              .field__title
                建物名
              .field__require--any
                任意
            %input{name: "address_building", placeholder: "例)栄センタービル", type: "text", value: ""}
          .address__field
            .field
              .field__title
                お届け先の電話番号
              .field__require--any
                任意
            %input{name: "phone_number", placeholder: "例)080-1234-5678", type: "tel", value: ""}
          .address__btn
            .btn
              次へ進む
  .new__footer
    %ul.footer__lists
      %li
        プライバシーポリシー
      %li
        フリマ利用規約
      %li
        特定商取引に関する表記
    .footer__icon
      = link_to root_path do
        = image_tag src=("logo-white.png"), class: "icon__image"
    .footer__text
      %p ©︎ 2020 Furima